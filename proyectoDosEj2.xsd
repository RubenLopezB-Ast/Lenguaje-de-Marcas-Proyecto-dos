<?xml version="1.0" encoding="UTF-8"?>
    <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
        <xs:element name="plataforma">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="cursos">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="curso" maxOccurs="unbounded">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element name="titulo" type="xs:string"/>
                                            <xs:element name="nivel" type="xs:string"/>
                                            <xs:element name="modalidad" type="xs:string"/>
                                            <xs:element name="horas" type="xs:integer"/>
                                            <xs:element name="modulos" minOccurs="0">
                                                <xs:complexType>
                                                    <xs:sequence>
                                                        <xs:element name="modulo" maxOccurs="unbounded">
                                                            <xs:complexType>
                                                                <xs:sequence>
                                                                    <xs:element name="nombre" type="xs:string"/>
                                                                    <xs:element name="horas" type="xs:integer"/>
                                                                </xs:sequence>
                                                                <xs:attribute name="clave" type="xs:string" use="optional"/>
                                                            </xs:complexType>
                                                        </xs:element>
                                                    </xs:sequence>
                                                </xs:complexType>
                                            </xs:element>
                                        </xs:sequence>
                                        <xs:attribute name="id" type="xs:ID" use="required"/>
                                        <xs:attribute name="codigo" type="xs:string" use="optional"/>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="alumnos">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="alumno" maxOccurs="unbounded">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element name="nombre" type="xs:string"/>
                                            <xs:element name="email">
                                                <xs:simpleType>
                                                    <xs:restriction base="xs:string">
                                                        <xs:pattern value="[^@]+@[^@]+\.[a-zA-Z]{2,}"/><!-- nombre con o sin puntos@ nombre con os sin puntos.dos letras minimo-->
                                                    </xs:restriction>
                                                </xs:simpleType>
                                            </xs:element>
                                            <xs:element name="telefono" minOccurs="0">
                                                <xs:simpleType>
                                                    <xs:restriction base="xs:string">
                                                        <xs:pattern value="[679]\d{8}"/><!-- Primer numero un 6,7 ó 9 y siguen 8 cifras más-->
                                                    </xs:restriction>
                                                </xs:simpleType>
                                            </xs:element>
                                        </xs:sequence>
                                        <xs:attribute name="id" type="xs:ID" use="required"/>
                                        <xs:attribute name="nif">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:string">
                                                    <xs:pattern value="\d{8}[A-Za-z]"/><!-- estructua00000000(letra mayus o minus)-->
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:attribute>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="matriculas">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="matricula" maxOccurs="unbounded">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element name="fecha_alta" type="xs:date"/>
                                            <xs:element name="estado" type="xs:string"/>
                                        </xs:sequence>
                                        <xs:attribute name="id" type="xs:ID" use="required"/>
                                        <xs:attribute name="alumnoRef" type="xs:IDREF" use="required"/>
                                        <xs:attribute name="cursoRef" type="xs:IDREF" use="required"/>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="evaluaciones">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="evaluacion" maxOccurs="unbounded">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element name="instrumento" type="xs:string"/>
                                            <xs:element name="convocatoria" type="xs:string"/>
                                            <xs:element name="nota" type="xs:decimal"/>
                                        </xs:sequence>
                                        <xs:attribute name="id" type="xs:ID" use="required"/>
                                        <xs:attribute name="matriculaRef" type="xs:IDREF" use="required"/>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
                <xs:attribute name="fecha_publicacion" type="xs:date" use="required"/>
            </xs:complexType>
        </xs:element>
    </xs:schema>